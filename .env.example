# Wallet private key (without 0x prefix)
# WARNING: Never commit your actual private key!
PRIVATE_KEY=your_private_key_here

# RPC URLs (get free ones from Alchemy or Infura)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
BASE_SEPOLIA_RPC_URL=https://sepolia.base.org

# Block explorer API keys (for contract verification)
ETHERSCAN_API_KEY=your_etherscan_api_key
BASESCAN_API_KEY=your_basescan_api_key

# Arbitrator address (your wallet that will control the escrow)
ARBITRATOR_ADDRESS=0xYourWalletAddress
